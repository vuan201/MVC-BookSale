@using BookSale.Managerment.Ui.Areas.Admin.Controllers
@{
    ViewData["Title"] = "Quản lý tài khoảng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Striped Table</h4>
        <div class="">
            <table 
                id="account-table" 
                class="table table-striped table-hover" 
                data-toggle="table"
                data-toolbar=".toolbar"
                data-url="@Url.Action(nameof(AccountController.GetListAccounts))"
                data-unique-id="id" 
                data-side-pagination="server" 
                data-pagination="true" 
                data-search="true"
                data-search-on-enter-key="true" 
                data-query-params="customParams">
                <thead>
                    <tr>
                        <th data-field="id"> Id </th>
                        <th data-field="userName"> User Name </th>
                        <th data-field="fullName"> FUll Name </th>
                        <th data-field="email"> Email </th>
                        <th data-field="phone"> Phone </th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function customParams(params) {
            console.log(params)
            return params;
        }
    </script>

}